{% extends 'admin/base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
<div class="container">
    <h1>Panier</h1>
  
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                {% for item in panier %}
                    {% for product in item.getProductId() %}
                        <tr>
                            <td>{{ product.getProdName() }}</td>
                            <td>{{ product.getPrice() }}</td>
                            <td>{{ item.getQuantity() }}</td>
                            <td>{{ item.getPrixTotal() }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    
</div>
{% endblock %}
