{% extends 'User/base.html.twig' %}


  {% block body %}

      <div class="container-xl px-4 mt-4">
          <!-- Account page navigation-->










          <hr class="mt-0 mb-4">
          <div class="row">
              <div class="col-xl-4">
                  <!-- Profile picture card-->
                  {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                  <div class="card mb-4 mb-xl-0">
                      <div class="card-header">Profile Picture</div>
                      <div class="card-body text-center">
                          <!-- Profile picture image-->{% if app.user.image %}
                      <img class="{{ asset('uploads/user/')~app.user.image }}" alt="">
                          {% else %}
                          <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                          {% endif %}
                          <!-- Profile picture help block-->
                          <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                          <!-- Profile picture upload button-->
                          {{ form_row(form.image, {'attr': {'class': 'btn btn-primary',
                          }}) }}
{#                          <button class="btn btn-primary" type="button">Upload new image</button>#}
                      </div>
                  </div>
              </div>
              <div class="col-xl-8">
                  <!-- Account details card-->
                  <div class="card mb-4">
                      <div class="card-header">Account Details</div>
                      <div class="card-body">

                              <!-- Form Group (username)-->
                              <div class="mb-3">


                                  {{ form_row(form.email, {'attr': {'class': 'form-control',
                                  }})
                                  }}
                              </div>
                              <!-- Form Row-->
                              <div class="row gx-3 mb-3">
                                  <!-- Form Group (first name)-->
                                  <div class="col-md-6">


                                      {{ form_row(form.name, {'attr': {'class': 'form-control',
                                      }}) }}
                                  </div>
                                  <!-- Form Group (last name)-->
                                  <div class="col-md-6">

                                      {{ form_row(form.prenom, {'attr': {'class': 'form-control',
                                      }}) }}
                                  </div>
                              </div>
                              <!-- Form Row        -->
                              <div class="row gx-3 mb-3">
                                  <!-- Form Group (organization name)-->
                                  <div class="col-md-6">


                                      {{ form_row(form.age, {'attr': {'class': 'form-control',
                                      }}) }}
                                  </div>
                                  <!-- Form Group (location)-->
                                  <div class="col-md-6">


                                      {{ form_row(form.num_tel, {'attr': {'class': 'form-control',
                                      }}) }}
                                  </div>
                              </div>
                              <!-- Form Group (email address)-->
                              <div class="mb-3">

                                  {{ form_row(form.adresse, {'attr': {'class': 'form-control',
                                  }}) }}
                              </div>
                              <!-- Form Row-->

                              <!-- Save changes button-->
                          {{ form_row(form.Ajouter, {'attr': {'class': 'btn btn-primary'


                          }}) }}

                              {{ form_end(form) }}
                      </div>
                  </div>
              </div>
          </div>
      </div
{% endblock %}